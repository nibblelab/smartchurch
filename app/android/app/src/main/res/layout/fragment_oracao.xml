<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OracaoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- lista de pedidos de oração -->
        <include
            android:id="@+id/include_pedidos"
            layout="@layout/oracao_list_layout" />

        <!-- formulário de pedido de oração -->
        <include
            android:id="@+id/include_pedido_form"
            layout="@layout/oracao_form_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>